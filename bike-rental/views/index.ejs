        <article class="service">
          <h3>Cape Town:</h3>
          <p><%= weatherC %></p>
        </article>
        <article class="service">
          <h3>Johannesburg:</h3>
          <p><%= weatherJ %></p>
        </article>
        <article class="service">
          <h3>Durban:</h3>
          <p><%= weatherD %></p>
        </article>
      </nav>
